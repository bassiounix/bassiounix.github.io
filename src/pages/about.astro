---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About">
  <MainCard
    title="About bassiounix"
    description="Developer and open-source enthusiast."
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section
        class="flex flex-col md:flex-row gap-8 items-center md:items-start"
      >
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img
              src="https://github.com/bassiounix.png"
              alt="SunMaple"
              width="160"
              height="160"
              loading="eager"
            />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">
            Muhammad Bassiouni
          </h1>
          <p class="text-xl text-base-content/80 mb-4">
            Developer & Open-Source Enthusiast
          </p>

          <div
            class="flex flex-wrap gap-3 justify-center md:justify-start mb-6"
          >
            <a
              href="https://github.com/bassiounix"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://twitter.com/bassiounix"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>Twitter</span>
            </a>
            <a
              href="mailto:evesunmaple@outlook.com"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">
            Hello! I'm Muhammad Bassiouni, a passionate software engineer with 2
            years of experience in backend development, compiler and toolchain
            technologies. Worked at Menoufia University (enabling digital
            transformation). Contributed to LLVM. I love contributing to
            open-source projects and building tools that help others create
            beautiful digital experiences. Interested in working on
            cutting-edge, scalable services technology with global impact.
          </p>
        </div>
      </section>

      <!-- Experience -->
      <section
        class="prose prose-lg prose-gray dark:prose-invert space-y-12 px-6 py-8 max-w-full"
      >
        <h2 class="text-3xl font-bold text-left mb-6">Experience</h2>

        <!-- Backend Software Engineer -->
        <article class="space-y-4">
          <header class="grid grid-cols-2 gap-4">
            <div class="text-left font-semibold text-lg">
              Backend Software Engineer
            </div>
            <div class="text-right text-lg">Sep 2023 – Sep 2024</div>
            <div class="text-left text-lg">Menoufia University</div>
            <div class="text-right italic text-lg">Menoufia, Egypt</div>
          </header>
          <ul class="list-disc space-y-2 text-left">
            <li>
              Reduced subscription costs of outsourcing portal system by
              $40,000+ annually via developing new portal backend system from
              scratch to replace legacy system using TypeScript, Nest.js,
              TypeORM and SQL Server.
            </li>
            <li>
              Increased system performance by 35% via migrating to new server
              host and tech stack using Docker and Node.js, with deployment to
              Jenkins and Coolify on server.
            </li>
            <li>
              Developed permission authorization system for 88,000+ students and
              employees, securing API endpoints against unauthorized access
              using Passport.js, Helmet and JWT authentication & authorization.
            </li>
          </ul>
        </article>

        <!-- Site Supervisor -->
        <article class="space-y-4">
          <header class="grid grid-cols-2 gap-4">
            <div class="text-left font-semibold text-lg">Site Supervisor</div>
            <div class="text-right text-lg">Oct 2022 – Dec 2023</div>
            <div class="text-left text-lg">Udacity</div>
            <div class="text-right italic text-lg">Menoufia, Egypt</div>
          </header>
          <ul class="list-disc space-y-2 text-left">
            <li>
              Led & coordinated efforts of DECI sessions, ensuring smooth
              execution & alignment with educational goals.
            </li>
            <li>
              Audited sessions to maintain high standards, ensuring the delivery
              of accurate and effective technical content.
            </li>
            <li>
              Delivered detailed feedback on sessions, contributing to a better
              learning environment.
            </li>
            <li>
              Collaborated with instructors & supervisors to enhance learning
              and create environment for student success.
            </li>
          </ul>
        </article>

        <!-- Backend Intern -->
        <article class="space-y-4">
          <header class="grid grid-cols-2 gap-4">
            <div class="text-left font-semibold text-lg">
              Backend Software Engineer Intern
            </div>
            <div class="text-right text-lg">Jul 2023 – Sep 2023</div>
            <div class="text-left text-lg">Banque Misr</div>
            <div class="text-right italic text-lg">New Cairo, Egypt</div>
          </header>
          <ul class="list-disc space-y-2 text-left">
            <li>
              Developed real-time exchange rate system using Spring Boot,
              enabling currency conversions and comparisons.
            </li>
            <li>
              Doubled retrieval & conversion performance using Redis with cron
              job for caching.
            </li>
            <li>
              Documented & tested code using Javadoc, Swagger, and JUnit.
              Deployed API with Docker on Render.
            </li>
          </ul>
        </article>
      </section>

      <!-- OPEN SOURCE PROJECTS -->
      <section
        class="prose prose-lg prose-gray dark:prose-invert space-y-12 px-6 py-8 max-w-full"
      >
        <h2 class="text-3xl font-bold text-left mb-6">Open Source Projects</h2>

        <article class="space-y-4">
          <header class="grid grid-cols-2 gap-4">
            <div class="text-left font-semibold text-lg">Committer</div>
            <div class="text-right text-lg">Jan 2025 – Present</div>
            <div class="text-left text-lg">LLVM</div>
            <div class="text-right italic text-lg">
              <a
                href="https://github.com/llvm/llvm-project/pulls?q=author:bassiounix"
              >
                Pull Requests
              </a>
            </div>
          </header>
          <ul class="list-disc space-y-2 text-left">
            <li>
              Facilitated building LLVM libc++ against LLVM libc by implementing
              wctype (unicode) utilities.
            </li>
            <li>
              Extended safety of LLVM libc by adding C11 bounds-checking
              interfaces with Annex K safe APIs.
            </li>
            <li>
              Implemented C++ constexpr math functions in libc by refactoring
              math functions to header-only.
            </li>
            <li>
              Improved build accuracy and consistency by fixing LLVM libc header
              generation.
            </li>
            <li>
              Extended Clang capabilities by adding bf16 type support macros
              with number literal suffix.
            </li>
            <li>
              Increased test isolation by making str to float comparison test
              hermetic in LLVM libc.
            </li>
            <li>
              Optimized LLVM IR performance by fixing missed i128 split
              optimization.
            </li>
          </ul>
        </article>
      </section>

      <!-- Tech Stack -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:code-2" class="w-6 h-6 text-primary" />
          <span>Tech Stack</span>
        </h2>

        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
        >
          {
            [
              {
                name: "Python",
                icon: "devicon:python",
              },
              {
                name: "C++",
                icon: "devicon:cplusplus",
              },
              // { name: "Astro", icon: "devicon:astro", color: "oklch(0.5 0.2 300)" },
              {
                name: "JavaScript",
                icon: "devicon:javascript",
              },
              {
                name: "TypeScript",
                icon: "devicon:typescript",
              },
              {
                name: "Java",
                icon: "devicon:java",
              },
              {
                name: "React",
                icon: "devicon:react",
                color: "oklch(0.7 0.2 200)",
              },
              {
                name: "Node.js",
                icon: "devicon:nodejs-wordmark",
              },
              // { name: "TailwindCSS", icon: "devicon:tailwindcss", color: "oklch(0.6 0.2 220)" },
              {
                name: "HTML5",
                icon: "devicon:html5",
              },
              {
                name: "CSS3",
                icon: "devicon:css3",
              },
              {
                name: "Postgresql",
                icon: "devicon:postgresql",
              },
              {
                name: "Git",
                icon: "devicon:git",
              },
              {
                name: "Docker",
                icon: "devicon:docker",
              },
              {
                name: "Linux",
                icon: "devicon:linux",
              },
              {
                name: "Bash",
                icon: "devicon:bash",
              },
              {
                name: "Graphite",
                icon: "simple-icons:graphite",
              },
              // { name: "C#", icon: "simple-icons:csharp", color: "oklch(0.6 0.2 160)" },
            ].map((tech) => (
              <div class="flex flex-col items-center justify-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
                <div class="text-3xl mb-2">
                  <Icon name={tech.icon} class="w-10 h-10" />
                </div>
                <span class="text-sm font-medium">{tech.name}</span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Contribution Activity -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:activity" class="w-6 h-6 text-primary" />
          <span>Recent certifications</span>
        </h2>

        <div class="bg-base-200 rounded-xl p-6 overflow-x-auto">
          <div
            class="flex flex-col md:flex-row gap-8 md:gap-4 md:overflow-x-auto md:pb-2"
          >
            {
              [
                {
                  date: "November 2024",
                  title: "AWS Certified Cloud Practitioner",
                  desc: "Foundational certification in AWS Cloud.",
                },
                {
                  date: "October 2023",
                  title: "FinYology FinTech Hackathon",
                  desc: "4th place finalist startup among 50+ teams @ Central Bank of Egypt.",
                },
                {
                  date: "September 2023",
                  title: "Rowad Backend Summer Internship",
                  desc: "Summer Training in Backend Engineering @ Banque Misr.",
                },
                {
                  date: "August 2023",
                  title: "MINT Fintech Hackathon",
                  desc: "3rd Place Startup Idea Among 10 Teams @ EGBank & Startup Factory.",
                },
                {
                  date: "February 2023",
                  title: "Smart Governance Hackathon",
                  desc: "4th Place in Money Governance Idea @ AWS & Benha University.",
                },
                {
                  date: "October 2022",
                  title: "NTI AI Summer Training",
                  desc: "Training in Python, Machine Learning, Deep Learning & AI Deployment.",
                },
                {
                  date: "May 2022",
                  title: "Udacity Full-Stack Web Development Nanodegree",
                  desc: "Full-Stack Web Development Nanodegree, EgFWD Scholarship @ Udacity & MCIT.",
                },
              ].map((item, i) => (
                <div class="relative flex gap-4 pb-2 md:pb-0 md:min-w-[250px]">
                  <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-content text-xl">
                      {i + 1}
                    </div>
                    <div class="w-0.5 h-16 bg-base-300 mt-2 md:hidden" />
                  </div>
                  <div>
                    <div class="text-sm text-base-content/60 mb-1">
                      {item.date}
                    </div>
                    <h3 class="text-lg font-bold">{item.title}</h3>
                    <p class="text-base-content/80 mt-1">{item.desc}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats
          username="bassiounix"
          showLanguages={true}
          showCommitGraph={true}
        />
      </section>
    </div>
  </MainCard>
</BaseLayout>
